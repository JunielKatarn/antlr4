<?xml version="1.0" encoding="UTF-8"?>

<archetype-descriptor name="antlr4-maven-archetype">
    <fileSets>
        <fileSet filtered="true" packaged="true" encoding="UTF-8">
            <directory>src/main/java</directory>
            <includes>
                <include>**/*.java</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" packaged="true" encoding="UTF-8">
            <directory>src/main/antlr4</directory>
            <includes>
                <include>**/*.g4</include>
            </includes>
            <excludes>
                <exclude>**/imports/*.*</exclude>
            </excludes>
        </fileSet>
        <fileSet filtered="true" encoding="UTF-8">
            <directory>src/main/antlr4/imports</directory>
            <includes>
                <include>**/*.g4</include>
            </includes>
        </fileSet>
    </fileSets>
</archetype-descriptor>